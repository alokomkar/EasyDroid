<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    card_view:cardBackgroundColor="@color/md_blue_800"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/cardview_app_radius"
    card_view:cardElevation="4dp">

    <TextView
        android:id="@+id/progamLineTxtView"
        android:layout_width="match_parent"
        android:minHeight="@dimen/margin_48"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_12"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textSize="@dimen/text_dashboard_small" >
    </TextView>

</android.support.v7.widget.CardView>