<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optionCardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/optionTextView"
        android:layout_width="match_parent"
        android:minHeight="@dimen/margin_48"
        android:layout_toLeftOf="@+id/reorderImageView"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_12"
        android:layout_gravity="center_vertical"
        android:textColor="@color/md_blue_grey_500"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textSize="@dimen/text_dashboard_small" >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reorderImageView"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_reorder"/>

    <View
        android:layout_below="@+id/optionTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/md_grey_400"/>

</RelativeLayout>